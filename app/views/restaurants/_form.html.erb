<%= form_for(@restaurant, :remote => true) do |f| %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :capacity %> <br/>
    <%= f.number_field :capacity %>
  </div>
  <div class="field">
    <%= f.label :location %> <br/>
    <%= f.text_field :location %>
  </div>


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>


